{% extends 'base.html.twig' %}

{% block title %}{{ title }} {% endblock %}

{% block body %}
	<section id="team2" class="section gray-bg">
			<div class="container">
				<div class="row title">
					<div class="col-md-6">
						<h2 class="margin-top">Résultats</h2>
						<h4 class="light muted">Tous les matchs depuis le "des buts !"</h4>
					</div>
						<div class="margin-top col-md-6">
							<a href="{{ path('game_results') }}" class="pull-right btn btn-blue-fill" >Mes pronostics</a>
						</div>
				</div>
				<div class="row">

					{% for game in games %}
						{% include '/match.html.twig' with {'id': game.id, 'team1': game.team1, 'team2': game.team2, 'score1': game.score1, 'score2':game.score2, 'date':game.date}  %}
	        {% else %}
					<div class="alert alert-danger" role="alert">Aucun résultat!</div>
	        {% endfor %}

				</div>
			</div>
		</section>
{% endblock %}
