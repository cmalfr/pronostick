{{ form_start(form, { 'attr' : { 'class': 'popup-form' } }) }}
<div class="row">
  <div class="col-md-8">
    {{ form_widget(form.team1) }}
  </div>
  <div class="col-md-4">
    {{ form_widget(form.score1) }}
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    {{ form_widget(form.team2) }}
  </div>
  <div class="col-md-4">
    {{ form_widget(form.score2) }}
  </div>
</div>
<div class="row">
  {{ form_widget(form.date) }}
</div>


<div class="form-group mx-sm-3 mb-2">
  {{ form_errors(form.team1) }}
  {{ form_errors(form.team2) }}
  {{ form_errors(form.score1) }}
  {{ form_errors(form.score2) }}
  {{ form_widget(form.date) }}
</div>




    <a href="{{ path('game_results') }}" class="btn btn-primary mb-2">Retour</a>
    <button class="btn btn-white-fill">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
